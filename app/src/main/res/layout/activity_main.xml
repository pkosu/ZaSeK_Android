<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context="com.example.playgrounds01.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_zadaniAdresy"
        android:hint="Vlož adresu nebo použiji současnou pozici"
        android:padding="16dp"
        android:drawablePadding="16dp"
        android:drawableLeft="@drawable/ic_location"
        android:gravity="center_vertical"
        android:background="@android:drawable/editbox_background"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_zobrazeniVyberuVelikost"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="5"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar_pojezdVyberuVelikosti"
        android:max="10"
        android:progress="5"
        android:padding="12dp"
        android:layout_marginTop="16dp"

        />



    <Button
        android:id="@+id/btn_vyhledat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vypiš list adresy"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="16dp"/>


</LinearLayout>